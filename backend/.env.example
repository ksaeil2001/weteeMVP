# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/wetee_db
# For development with SQLite (optional):
# DATABASE_URL=sqlite:///./wetee.db

# JWT Configuration (REQUIRED)
# ⚠️ 운영 환경에서는 반드시 안전한 랜덤 키를 생성하여 사용하세요!
# 안전한 키 생성 방법:
#   python -c "import secrets; print(secrets.token_hex(32))"
#
# 개발 환경 예시 (32자 이상 권장):
JWT_SECRET_KEY=dev-jwt-secret-key-minimum-32-characters-required-change-in-prod
JWT_REFRESH_SECRET_KEY=dev-refresh-secret-key-minimum-32-characters-required-change-prod
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application Settings
PROJECT_NAME=WeTee
API_VERSION=v1
DEBUG=True

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Security
BCRYPT_ROUNDS=12
